<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    tools:context=".SplashScreen">

    <TextView
        android:id="@+id/textsplash"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="559dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="258dp"
        android:fontFamily="@font/allerbd5"
        android:gravity="center"
        android:text="text"
        android:textColor="#5DB3C1"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="505dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="313dp"
        android:fontFamily="@font/allerbd7"
        android:text="Color Detection"
        android:textColor="#5DB3C1"
        android:textSize="41dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textcopy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/allerbd5"
            android:gravity="center"
            android:padding="16dp"
            android:text="TextView"
            android:textColor="#5DB3C1"
            android:textSize="15dp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>